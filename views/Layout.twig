{% set title = [app_title, _params.title|default(_params.name)|capitalize]|join(" | ") %}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block meta %}
			{% include "includes/Meta.twig" %}
		{% endblock %}
		<base href="{{ app_subdir }}/">
		<link rel="icon" type="image/png" href="favicon.ico"/>
		<link rel="stylesheet" type="text/css" href="css/style.min.css"/>
		<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"/>
		<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
		<script defer src="https://kit.fontawesome.com/63124842e5.js" crossorigin="anonymous"></script>
		<script defer src="js/bundle.js"></script>
		<title>{{ title }}</title>
	</head>
	{% block body %}
		<body>
			{% block navbar %}
				{% include "includes/Navbar.twig" %}
			{% endblock %}
			{% block main %}
				<main class="container pb-2">
					{{ content|raw }}
				</main>
			{% endblock %}
		</body>
	{% endblock %}
</html>
